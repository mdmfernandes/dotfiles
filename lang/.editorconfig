# top-most EditorConfig file
root = true

# Default config
[*]
charset = utf-8
end_of_line = lf
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

# Git commit message
[COMMIT_EDITMSG]
max_line_length = 72

[*.patch]
trim_trailing_whitespace = false
insert_final_newline = false
